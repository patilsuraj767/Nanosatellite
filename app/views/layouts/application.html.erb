      <ul class="nav navbar-nav navbar-right">
        <li><a href="#">Logout</a></li>
       
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<div class="container">
    
    <%= yield %>
     
